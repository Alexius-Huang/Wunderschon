<% content_for :css do %>
  <%= stylesheet_link_tag 'navbar' %>
<% end %>

<div id="mobile-version-navbar" class="mobile-version navbar-container col-sm-12 col-xs-12 p-0">
  <div class="navbar-body">
    <div class="row" id="mobile-navbar-caption">
      <div class="col-md-2 col-sm-2 col-xs-2 p-0">
        <div id="categories-icon">
          <% 4.times do %><span></span><% end %>
        </div>
      </div>
      <div class="col-md-8 col-sm-8 col-xs-8 text-center brand">
        <p class="text-center"><%= t('app_name') %></p>
      </div>
      <div class="col-md-2 col-sm-2 col-xs-2">
      </div>
    </div>

    <div id="mobile-slide-menu" class="row">
      <div class="col-xs-12 col-sm-12 col-md-12">
        List Item 1
      </div>
      <div class="col-xs-12 col-sm-12 col-md-12">
        List Item 2
      </div>
      <div class="col-xs-12 col-sm-12 col-md-12">
        List Item 3
      </div>
      <div class="col-xs-12 col-sm-12 col-md-12">
        List Item 4
      </div>
      <div class="col-xs-12 col-sm-12 col-md-12">
        List Item 5
      </div>
      <div class="col-xs-12 col-sm-12 col-md-12">
        List Item 6
      </div>
    </div>
  </div>
</div>

<div id="desktop-version-navbar" class="desktop-version navbar-container col-xl-12 col-lg-12 col-md-12 col-sm-12">
  <div class="custom-container">
    <div class="navbar-body">
      <ul>
        <li class="brand"><%= t('app_name') %></li>
        <% if user_signed_in? %>
          <li class="nav-right m-r-20"><%= link_to 'Sign out', destroy_user_session_path, method: :delete %></li>
          <li class="nav-right"><%= link_to 'Account', edit_user_registration_path %></li>
        <% else %>
          <li class="nav-right m-r-20"><%= link_to 'Sign in', new_user_session_path %></li>
          <li class="nav-right"><%= link_to 'Sign up', new_user_registration_path %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

<div class="navbar-offset"></div>
